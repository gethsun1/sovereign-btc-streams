# =============================================================================
# Sovereign BTC Streams - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/streams?schema=public

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
# Options: development | production | test
NODE_ENV=development

# -----------------------------------------------------------------------------
# Application Security
# -----------------------------------------------------------------------------
# Enforce wallet signature verification for all transactions
# Set to "true" in production, "false" for local development/testing
REQUIRE_WALLET_SIG=false

# -----------------------------------------------------------------------------
# Charms API Configuration
# -----------------------------------------------------------------------------
# Charms Prover API endpoint for ZK proof generation
CHARMS_API_BASE=https://v8.charms.dev

# Optional: API key for authenticated requests
# CHARMS_API_KEY=your_charms_api_key_here

# Allow fallback to mock data if Charms API is unavailable
# Set to "false" in production to fail fast on API errors
CHARMS_ALLOW_FALLBACK=true

# -----------------------------------------------------------------------------
# Scrolls API Configuration
# -----------------------------------------------------------------------------
# Scrolls Programmable Vault API endpoint
SCROLLS_API_BASE=https://scrolls.charms.dev

# -----------------------------------------------------------------------------
# zkBTC API Configuration (Optional)
# -----------------------------------------------------------------------------
# zkBTC proof generation/verification service
# Leave empty to use mock proofs in development
ZKBTC_API_BASE=

# Optional: API key for zkBTC service
# ZKBTC_API_KEY=your_zkbtc_api_key_here

# Allow fallback to mock proofs if zkBTC API is unavailable
ZKBTC_ALLOW_FALLBACK=true

# -----------------------------------------------------------------------------
# Grail API Configuration (Optional)
# -----------------------------------------------------------------------------
# Grail Pro vault management service
GRAIL_API_BASE=

# Optional: API key for Grail service
# GRAIL_API_KEY=your_grail_api_key_here

# Allow fallback if Grail API is unavailable
GRAIL_ALLOW_FALLBACK=true

# -----------------------------------------------------------------------------
# Demo/Testing Configuration
# -----------------------------------------------------------------------------
# Default wallet address for demo mode (testnet format)
# Example testnet address: tb1qw508d6qejxtdg4y5r3zarvary0c5xw7kxpjzsx
DEMO_WALLET_ADDRESS=tb1qw508d6qejxtdg4y5r3zarvary0c5xw7kxpjzsx

# -----------------------------------------------------------------------------
# Production Recommendations
# -----------------------------------------------------------------------------
# For production deployment:
# 1. Set REQUIRE_WALLET_SIG=true
# 2. Set NODE_ENV=production
# 3. Use strong database credentials
# 4. Set all *_ALLOW_FALLBACK to false
# 5. Provide real API keys for all services
# 6. Use a secrets manager (AWS Secrets Manager, HashiCorp Vault)
# 7. Enable SSL/TLS for database connections
# 8. Rotate API keys regularly
# =============================================================================
